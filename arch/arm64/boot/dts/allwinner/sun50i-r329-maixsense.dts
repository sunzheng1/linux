/dts-v1/;

#include "sun50i-r329-maix-iia.dtsi"

#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>
#include <dt-bindings/pwm/pwm.h>

/ {
	model = "Sipeed MaixSense";
	compatible = "sipeed,maixsense", "sipeed,maix-iia",
		     "allwinner,sun50i-r329";

	aliases {
		serial0 = &uart0;
        	serial1 = &uart1;
        	serial2 = &uart2;
        	serial3 = &uart3;
        	i2c0 = &i2c0;
		i2c1 = &i2c1;
		spi0 = &spi0;
		spi1 = &spi1;
		mmc0 = &mmc0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	backlight: backlight {
		compatible = "pwm-backlight";
		pwms = <&pwm 4 50000 PWM_POLARITY_INVERTED>;
		brightness-levels = <0 16 18 20 22 24 26 29 32 35 38 42 46 51 56 62 68 75 83 91 100>;
		default-brightness-level = <15>;
	};

	leds {
		compatible = "pwm-leds";

		led-1 {
			color = <LED_COLOR_ID_RED>;
	                function = LED_FUNCTION_INDICATOR;
			function-enumerator = <1>;
			pwms = <&pwm 0 50000 PWM_POLARITY_INVERTED>;
			max-brightness = <255>;
			linux,default-trigger = "heartbeat";
		};

		led-2 {
			color = <LED_COLOR_ID_GREEN>;
			function = LED_FUNCTION_INDICATOR;
			function-enumerator = <2>;
			pwms = <&pwm 1 50000 PWM_POLARITY_INVERTED>;
			max-brightness = <255>;
		};

		led-3 {
			color = <LED_COLOR_ID_BLUE>;
			function = LED_FUNCTION_INDICATOR;
			function-enumerator = <3>;
			pwms = <&pwm 2 50000 PWM_POLARITY_INVERTED>;
			max-brightness = <255>;
		};
	};
};

&codec {
	status = "okay";
	allwinner,audio-routing =
		"Speaker", "SPKL",
		"MIC1", "Mic",
		"MIC2", "Mic",
		"Mic", "MBIAS",
		"Mic", "MBIAS";
};

&codec_analog {
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&lradc {
	status = "okay";

	button-155 {
		label = "Right";
		linux,code = <KEY_RIGHT>;
		channel = <0>;
		voltage = <155013>;
	};

	button-310 {
		label = "Left";
		linux,code = <KEY_LEFT>;
		channel = <0>;
		voltage = <309828>;
	};

	button-463 {
		label = "B";
		linux,code = <KEY_B>;
		channel = <0>;
		voltage = <463317>;
	};

	button-599 {
		label = "A";
		linux,code = <KEY_A>;
		channel = <0>;
		voltage = <599420>;
	};
};

&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pf_pins>;

	vmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_LOW>; /* PF6 */
	status = "okay";
};

&ohci0 {
	status = "okay";
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm2_pb2>, <&pwm3_pb3>, <&pwm6_pb6>, <&pwm7_pb7>;
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_clk_pc4>, <&spi0_mosi_pc3>, <&spi0_miso_pc1>;
	//<&spi0_cs_pc0>, 
	status = "okay";

	//ICM_20602 ICM_20689_CS
	cs-gpios = <&pio 2 0 GPIO_ACTIVE_HIGH>,<&r_pio 0 2 GPIO_ACTIVE_HIGH>;
	spidev@0 {
		compatible = "spidev";
		/* spi default max clock 100Mhz */
		spi-max-frequency = <100000000>;
		reg = <0>;
	};

	spidev@1 {
		compatible = "spidev";
		/* spi default max clock 100Mhz */
		spi-max-frequency = <100000000>;
		reg = <1>;
	};

};

&spi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_clk_ph1>, <&spi1_mosi_ph2>, <&spi1_miso_ph3>;
	//<&spi1_cs_ph0>, 
	status = "okay";
	//MS5611 PMW3901
	cs-gpios = <&pio 7 0 GPIO_ACTIVE_HIGH>,<&r_pio 0 3 GPIO_ACTIVE_HIGH>;
	spidev@0 {
		compatible = "spidev";
		/* spi default max clock 100Mhz */
		spi-max-frequency = <100000000>;
		reg = <0>;
	};

	spidev@1 {
		compatible = "spidev";
		/* spi default max clock 100Mhz */
		spi-max-frequency = <100000000>;
		reg = <1>;
	};
};
&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pb_pins>;
	status = "okay";
};

&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pg_pins>;
	status = "okay";
};

&uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pb_pins>;
	status = "okay";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_ph_pins>;
	status = "okay";
};
&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	usb0_id_det-gpios = <&pio 1 3 GPIO_ACTIVE_HIGH>; /* PB3 */
	status = "okay";
};
